{
  "name": "next-shopify-storefront",
  "type": "module",
  "version": "4.0.0",
  "description": "A Shopping Cart built with Tailwind CSS, ShadCN UI, Next.js, React.js, Shopify Hydrogen React,... and Shopify Storefront GraphQL API.",
  "license": "MIT",
  "repository": "https://github.com/VienDinhCom/next-shopify-storefront.git",
  "scripts": {
    "start": "next start",
    "dev": "esmate task dev",
    "build": "esmate task build",
    "fix": "esmate task fix",
    "check": "esmate task check",
    "test": "esmate task test"
  },
  "dependencies": {
    "@esmate/react": "^3.1.2",
    "@esmate/shadcn": "^3.6.0",
    "@esmate/utils": "^1.3.3",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@shopify/hydrogen-react": "^2025.7.0",
    "@t3-oss/env-nextjs": "^0.13.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql": "^16.12.0",
    "lucide-react": "^0.563.0",
    "next": "^16.1.1",
    "nextjs-toploader": "^3.9.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.15.2",
    "@esmate/prettier": "^1.0.6",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/client-preset": "^5.2.2",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@parcel/watcher": "^2.5.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/react": "^16.3.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^24.10.4",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "esmate": "^2.1.4",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "tasks": {
    "test": "vitest",
    "dev": {
      "codegen": "graphql-codegen --watch --config codegen.config.ts",
      "nextdev": "rimraf .next && next dev"
    },
    "build": [
      "graphql-codegen --config codegen.config.ts",
      "next build"
    ],
    "fix": [
      "esmate fmt",
      "esmate lint --fix"
    ],
    "check": [
      "tsc --noEmit",
      "graphql-codegen --check --config codegen.config.ts",
      "esmate fmt --check",
      "esmate lint"
    ]
  },
  "postcss": {
    "plugins": [
      "@tailwindcss/postcss"
    ]
  }
}
